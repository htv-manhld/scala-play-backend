# Analytics Service Environment Variables Example
# Copy this file to .env and update the values

# Application Configuration
APPLICATION_SECRET=changeme1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
PLAY_ENV=dev
HTTP_PORT=9003

# Database Configuration
DB_URL=jdbc:postgresql://analytics-db:5432/analyticsdb
DB_USER=postgres
DB_PASSWORD=password
DB_NUM_THREADS=10
DB_MAX_CONNECTIONS=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_DOMAIN_EVENTS=domain-events
KAFKA_CONSUMER_GROUP_ID=analytics-service-group

# Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500

# Service Info
SERVICE_NAME=analytics-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=analytics-service
SERVICE_PORT=9003

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG_MODE=true

# Analytics Settings
METRICS_RETENTION_DAYS=30
BATCH_SIZE=1000
PROCESSING_INTERVAL_SECONDS=60