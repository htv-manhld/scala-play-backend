# Notification Service Environment Variables Example
APPLICATION_SECRET=your-application-secret-key-min-64-chars

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_USER_EVENTS=user-domain-events
KAFKA_TOPIC_NOTIFICATION_EVENTS=notification-events

# Email Configuration (UPDATE THESE!)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=true
SMTP_TLS=true
EMAIL_FROM=noreply@yourcompany.com

# Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500

# Service Info
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=notification-service
SERVICE_PORT=9002

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG_MODE=true

# Rate Limiting for Email
EMAIL_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_HOUR=50