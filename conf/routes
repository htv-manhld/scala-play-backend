# Legacy Redirector Routes
# Business logic has been moved to microservices
# This app now serves as a redirector and information page

# Health check endpoint
GET     /health                     controllers.RedirectController.health()

# Main page with microservices information
GET     /                           controllers.RedirectController.index()

# Redirect all API requests to API Gateway
GET     /api/*path                  controllers.RedirectController.index()
POST    /api/*path                  controllers.RedirectController.index()
PUT     /api/*path                  controllers.RedirectController.index()
DELETE  /api/*path                  controllers.RedirectController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)