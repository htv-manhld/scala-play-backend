# User Service Environment Variables Example
APPLICATION_SECRET=your-application-secret-key-min-64-chars

# Database Configuration
DB_DEFAULT_URL=jdbc:postgresql://user-db:5432/userdb
DB_DEFAULT_USERNAME=postgres
DB_DEFAULT_PASSWORD=password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_USER_EVENTS=user-domain-events

# Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500

# Service Info
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=user-service
SERVICE_PORT=9001

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG_MODE=true

# Database Pool Settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=30000