# API Gateway Environment Variables Example
APPLICATION_SECRET=your-application-secret-key-min-64-chars

# Service URLs (internal Docker network)
USER_SERVICE_URL=http://user-service:9001
NOTIFICATION_SERVICE_URL=http://notification-service:9002
ANALYTICS_SERVICE_URL=http://analytics-service:9003

# Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500

# Cache
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=your-jwt-secret-key-min-64-chars
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Service Info
SERVICE_NAME=api-gateway
SERVICE_VERSION=1.0.0
SERVICE_HOST=api-gateway
SERVICE_PORT=9000

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG_MODE=true